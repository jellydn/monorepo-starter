{
	"name": "@repo/auth",
	"version": "0.0.0",
	"private": true,
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"scripts": {
		"build": "tsup src/index.ts --format cjs,esm --dts",
		"dev": "tsup src/index.ts --format cjs,esm --dts --watch",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist"
	},
	"dependencies": {
		"@prisma/client": "6.7.0",
		"@repo/db": "workspace:*",
		"@types/node": "22.15.12",
		"better-auth": "1.2.7"
	},
	"devDependencies": {
		"@biomejs/biome": "1.9.4",
		"tsup": "8.4.0",
		"typescript": "5.8.3"
	}
}
