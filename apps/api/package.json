{
	"name": "api",
	"version": "1.0.0",
	"private": true,
	"scripts": {
		"dev": "tsx watch src/index.ts",
		"build": "tsc --project tsconfig.json",
		"start": "node dist/index.js",
		"lint": "biome check .",
		"format": "biome format . --write",
		"typecheck": "tsc --noEmit",
		"clean": "rm -rf dist",
		"test": "vitest run",
		"test:watch": "vitest",
		"test:coverage": "vitest run --coverage",
		"test:ui": "vitest --ui"
	},
	"dependencies": {
		"@repo/auth": "workspace:*",
		"@repo/db": "workspace:*",
		"@repo/logger": "workspace:*",
		"better-auth": "1.4.18",
		"body-parser": "2.2.2",
		"consola": "3.4.2",
		"cors": "2.8.6",
		"express": "5.2.1",
		"morgan": "1.10.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.4.4",
		"@repo/typescript-config": "workspace:*",
		"@types/body-parser": "1.19.6",
		"@types/cors": "2.8.19",
		"@types/express": "5.0.6",
		"@types/morgan": "1.9.10",
		"@types/node": "22.19.11",
		"@types/supertest": "6.0.3",
		"@vitest/coverage-v8": "3.2.4",
		"@vitest/ui": "3.2.4",
		"supertest": "7.2.2",
		"tsx": "4.21.0",
		"typescript": "5.9.3"
	}
}
